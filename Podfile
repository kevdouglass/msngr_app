# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'WhatsAppClone' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

	# Firebase pods
	pod 'Firebase/Database'
	pod 'Firebase/Core'
	pod 'Firebase/Auth'
	pod 'Firebase/Storage'
	pod 'Firebase/Firestore'


	# show user notifications on screen
	# if error: success / error
	pod 'ProgressHUD'

	# progress bar for sending AUDIO/ PICTURE msgs
	pod 'MBProgressHUD'

	# used for recording AUDIO messages
	pod 'IQAudioRecorderController'



	# for messenger 7.3.3 is the "stable version"
	# good for chat purpose
	pod 'JSQMessagesViewController', '7.3.3'
	# display messenger
	pod 'IDMPhotoBrowser'
	#  for nice images/ icons
	pod 'ImagePicker'



  # Pods for WhatsAppClone

end
